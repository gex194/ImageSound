<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="ImageSound.Views.ImageUploadView">
    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
        <Image Name="PreviewImage" MinWidth="500" MaxWidth="600" Height="400" Stretch="Uniform" />
        <Button Name="UploadButton" Content="Upload Image" Margin="5" Background="CornflowerBlue" CornerRadius="5"
                Click="OnUpload" />
    </StackPanel>
</UserControl>